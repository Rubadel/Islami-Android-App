<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SebhaFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/babyBrown">

            <include layout="@layout/action_bar"/>


            <TextView
                android:id="@+id/tv_total"
                android:layout_width="144dp"
                android:layout_height="51dp"
                android:layout_marginTop="144dp"
                android:background="@drawable/background_text"
                android:gravity="center"
                android:text="total"
                android:textColor="@color/silvwhite"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_single"
                android:layout_width="102dp"
                android:layout_height="39dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/background_text"
                android:gravity="center"
                android:text="single"
                android:textColor="@color/silvwhite"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_total" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="284dp"
                android:gravity="center"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_single"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/btn_reset"
                android:layout_width="31dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_rotate"
                app:layout_constraintBottom_toBottomOf="@id/btnCounter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.673"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                app:layout_constraintVertical_bias="0.348" />

            <ImageView
                android:id="@+id/btnCounter"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_reset" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>