<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tevani"
        tools:context=".SebhaFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sebha_bk">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="97dp"
                android:layout_height="95dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/custom_background"
                android:gravity="center"
                android:text=" مجموع التسبيحات"
                android:textColor="@color/silvwhite"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_single"
                android:layout_width="87dp"
                android:layout_height="79dp"
                android:layout_marginTop="137dp"
                android:background="@drawable/custom_background"
                android:gravity="center"
                android:text="مجموع التسبيحة"
                android:textColor="@color/silvwhite"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_reset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_total" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toTopOf="@+id/btnCounter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.066"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_reset"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/btn_reset"
                android:layout_width="37dp"
                android:layout_height="42dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="167dp"
                android:src="@drawable/ic_rotate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_single"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/btnCounter"
                android:layout_width="84dp"
                android:layout_height="82dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="65dp"
                android:background="@drawable/custom_background"
                android:src="@drawable/ic_sebha_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_reset"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>