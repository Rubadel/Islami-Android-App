<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hadeth_labeled"
            android:layout_width="116dp"
            android:layout_height="86dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/label_jpg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hadethName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:autoSizeTextType="uniform"
            android:text="الحديث السابع عشر "
            android:textAlignment="center"
            android:textColor="@color/light_golden"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_hadeth_labeled"
            app:layout_constraintEnd_toEndOf="@+id/iv_hadeth_labeled"
            app:layout_constraintStart_toStartOf="@+id/iv_hadeth_labeled"
            app:layout_constraintTop_toTopOf="@+id/iv_hadeth_labeled"
            app:layout_constraintVertical_bias="0.419" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>