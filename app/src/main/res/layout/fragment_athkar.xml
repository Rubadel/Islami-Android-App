<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sign_in"
        tools:context=".main_nav_fragments.AthkarFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="أذكار الصباح"
                android:textColor="@color/golden"
                android:textDirection="rtl"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_sun"/>
            <ImageButton
                android:id="@+id/btn_sun"
                android:layout_width="104dp"
                android:layout_height="92dp"
                android:layout_marginTop="176dp"
                android:background="@drawable/ic_sun_icon"
                android:text="Button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_night"
                android:layout_width="104dp"
                android:layout_height="92dp"
                android:layout_marginBottom="188dp"
                android:background="@drawable/ic_night_icon"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_sun"
                app:layout_constraintVertical_bias="0.726" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أذكار المساء"
                android:textColor="@color/dark_purple"
                app:layout_constraintStart_toStartOf="parent"
                android:textDirection="rtl"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_night"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>